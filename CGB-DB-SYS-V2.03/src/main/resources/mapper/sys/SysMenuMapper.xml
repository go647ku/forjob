<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.sys.dao.SysMenuDao">
   <!-- 基于菜单id查找权限标识 -->
   <select id="findPermissions"
           resultType="string">
       select permission <!-- sys:user:update,.... -->
       from sys_menus
       where id in 
       <foreach collection="menuIds"
                open="("
                close=")"
                separator=","
                item="item">
            #{item}
       </foreach>
   </select>
    
    <!-- 修改表单数据 -->
    <update id="updateObject"
            parameterType="com.db.sys.entity.SysMenu">
         update sys_menus
         set
           name=#{name},
           type=#{type},
           sort=#{sort},
           url=#{url},
           parentId=#{parentId},
           permission=#{permission},
           note=#{note},
           modifiedUser=#{modifiedUser},
           modifiedTime=now()
        where id=#{id}
    </update>
    <!-- 将菜单信息持久化到数据库 -->
    <insert id="insertObject"
            parameterType="com.db.sys.entity.SysMenu">
          insert into sys_menus
          (name,url,type,sort,note,parentId,permission,
           createdTime,modifiedTime,createdUser,modifiedUser)
          values
          (#{name},#{url},#{type},#{sort},#{note},#{parentId},#{permission},
          now(),now(),#{createdUser},#{modifiedUser})
    </insert>
   
    <!-- 查询页面上zTree呈现菜单时,
                 需要的节点信息 -->
    <select id="findZtreeMenuNodes"
            resultType="com.db.common.vo.Node">
          select id,name,parentId
          from sys_menus
    </select>
  
    <select id="getChildCount" resultType="int">
          select count(*)
          from sys_menus
          where parentId=#{id}        
    </select>
    
    <delete id="deleteObject">
          delete from sys_menus
          where id=#{id}
    </delete>
    
    <select id="findObjects" resultType="map">
           <!-- 方案一 -->
           <!-- 
           select c.*,p.name parentName
           from sys_menus c left join sys_menus p
           on c.parentId=p.id
           -->
           <!-- 方案二 -->
           
           select c.*,(select name
                       from sys_menus p
                       where c.parentId=p.id) parentName
           from sys_menus c 
    </select> 
  
</mapper>



